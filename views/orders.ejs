<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>üì¶ Orders Management - Fish Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/home">
                <i class="fas fa-fish"></i> Fish Admin
            </a>
            <div class="navbar-nav ms-auto">
                <a href="/home" class="nav-link">üè† Home</a>
                <a href="/orders" class="nav-link active">üì¶ Orders (<%= pendingCount %>)</a>
                <a href="/userlist" class="nav-link">üë• Users</a>
                <a href="/logout" class="nav-link">üö™ Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2><i class="fas fa-boxes"></i> All Orders (Total: <%= orders.length %>)</h2>
            <div class="alert alert-info">
                <strong>üí∞ Total Revenue: ‚Çπ<%= totalRevenue.toLocaleString('en-IN') %></strong>
                <span class="badge bg-warning ms-2">Pending: <%= pendingCount %></span>
            </div>
        </div>

        <% if (orders.length === 0) { %>
            <div class="alert alert-info text-center">
                <i class="fas fa-inbox fa-3x mb-3"></i>
                <h4>No orders yet</h4>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Items</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach((order, index) => { %>
                            <tr class="<%= order.status === 'pending' ? 'table-warning' : 
                                       order.status === 'shipped' ? 'table-info' : 
                                       order.status === 'delivered' ? 'table-success' : 'table-secondary' %>">
                                <td><%= index + 1 %></td>
                                <td>
                                    <strong>#<%= order._id.toString().slice(-8).toUpperCase() %></strong>
                                </td>
                                <td>
                                    <div><%= order.userId?.name || 'Guest' %></div>
                                    <small class="text-muted"><%= order.userId?.email || '-' %></small>
                                </td>
                                <td>
                                    <span class="badge bg-primary"><%= order.items.length %> item<%= order.items.length > 1 ? 's' : '' %></span>
                                    <% order.items.forEach(item => { %>
                                        <div class="small">
                                            <%= item.fishId?.name || 'Fish' %> √ó <%= item.quantity %>
                                        </div>
                                    <% }) %>
                                </td>
                                <td><strong>‚Çπ<%= order.totalAmount.toLocaleString('en-IN') %></strong></td>
                                <td>
                                    <span class="badge <%= order.status === 'pending' ? 'bg-warning' : 
                                                     order.status === 'shipped' ? 'bg-info' : 
                                                     order.status === 'delivered' ? 'bg-success' : 'bg-secondary' %>">
                                        <%= order.status.toUpperCase() %>
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <%= new Date(order.createdAt).toLocaleDateString('en-IN') %>
                                    </small>
                                </td>
                                <td>
                                    <a href="/orders/<%= order._id %>" class="btn btn-sm btn-outline-primary">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
