<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>üì¶ Orders Management - Fish Admin</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Roboto+Mono:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #0a0a1a 0%, #1a1a2e 30%, #16213e 70%, #0f0f23 100%);
            background-attachment: fixed;
            font-family: 'Roboto Mono', monospace;
            color: #e0e0e0;
            overflow-x: hidden;
            position: relative;
        }

        /* Animated Background Grid */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: 
                linear-gradient(rgba(0,255,255,0.05) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0,255,255,0.05) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: gridMove 30s linear infinite;
            z-index: 1;
            opacity: 0.4;
        }

        @keyframes gridMove {
            0% { transform: translate(0, 0); }
            100% { transform: translate(50px, 50px); }
        }

        /* Floating Particles */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .particle {
            position: absolute;
            background: radial-gradient(circle, rgba(0,255,255,0.8) 1px, transparent 1px);
            border-radius: 50%;
            animation: float 25s infinite linear;
        }

        .particle:nth-child(1) { width: 3px; height: 3px; top: 20%; left: 10%; animation-delay: 0s; }
        .particle:nth-child(2) { width: 2px; height: 2px; top: 60%; right: 20%; animation-delay: 8s; }
        .particle:nth-child(3) { width: 4px; height: 4px; bottom: 30%; left: 5%; animation-delay: 15s; }

        @keyframes float {
            0% { transform: translateY(0) rotate(0deg); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-100vh) rotate(360deg); opacity: 0; }
        }

        /* PERFECT RESPONSIVE NAVBAR */
        .navbar {
            background: rgba(15, 15, 35, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(0, 255, 255, 0.3);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
            padding: 1rem 2rem;
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar-inner {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 1rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand {
            font-family: 'Orbitron', monospace;
            font-weight: 900;
            font-size: 1.3rem;
            background: linear-gradient(45deg, #00ffff, #ff00ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: 2px;
            padding: 0.5rem 1rem;
            border-radius: 10px;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .navbar-brand:hover {
            background: linear-gradient(45deg, #ffffff, #00ffff);
            transform: translateY(-2px);
        }

        /* DESKTOP NAV - FULLSCREEN ONLY (>1200px) */
        .nav-links {
            display: flex;
            gap: 0.5rem;
            align-items: center;
            flex-wrap: nowrap;
        }

        .nav-link {
            color: #e0e0e0 !important;
            font-weight: 500;
            padding: 0.75rem 1.25rem !important;
            border-radius: 10px;
            transition: all 0.3s ease;
            white-space: nowrap;
            position: relative;
            text-decoration: none;
        }

        .nav-link:hover, .nav-link.active {
            background: rgba(0, 255, 255, 0.1);
            color: #00ffff !important;
            transform: translateY(-2px);
        }

        .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 50%;
            transform: translateX(-50%);
            width: 80%;
            height: 3px;
            background: linear-gradient(90deg, #00ffff, #ff00ff);
            border-radius: 2px;
        }

        /* MOBILE/RESPONSIVE NAVBAR */
        .mobile-menu-toggle {
            display: none;
            background: none;
            border: none;
            color: #00ffff;
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
            align-items: center;
            gap: 0.5rem;
            font-family: 'Orbitron', monospace;
            font-weight: 700;
        }

        .mobile-menu-toggle:hover {
            background: rgba(0, 255, 255, 0.1);
            transform: scale(1.1);
        }

        .mobile-menu {
            display: none;
            position: absolute;
            top: 100%;
            right: 1rem;
            background: rgba(20, 20, 45, 0.98);
            backdrop-filter: blur(25px);
            border: 1px solid rgba(0, 255, 255, 0.4);
            border-radius: 15px;
            padding: 1.5rem;
            min-width: 280px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.6);
            flex-direction: column;
            gap: 0.75rem;
            z-index: 1001;
            animation: dropdownSlide 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .mobile-menu.active {
            display: flex;
        }

        @keyframes dropdownSlide {
            from { 
                opacity: 0; 
                transform: translateY(-15px) scale(0.95); 
            }
            to { 
                opacity: 1; 
                transform: translateY(0) scale(1); 
            }
        }

        .mobile-menu::before {
            content: '';
            position: absolute;
            top: -10px;
            right: 20px;
            width: 0;
            height: 0;
            border-left: 10px solid transparent;
            border-right: 10px solid transparent;
            border-bottom: 10px solid rgba(0, 255, 255, 0.4);
        }

        /* Main Container */
        .container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 1rem;
            position: relative;
            z-index: 2;
        }

        /* Page Header */
        .page-header {
            background: rgba(20, 20, 45, 0.9);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(0, 255, 255, 0.3);
            border-radius: 25px;
            padding: 2.5rem;
            margin-bottom: 2.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 2rem;
        }

        .page-title {
            font-family: 'Orbitron', monospace;
            font-weight: 900;
            font-size: 2.5rem;
            background: linear-gradient(45deg, #00ffff, #ffffff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin: 0;
            letter-spacing: 2px;
        }

        .revenue-stats {
            background: rgba(0, 255, 136, 0.15);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(0, 255, 136, 0.4);
            border-radius: 20px;
            padding: 1.5rem 2rem;
            display: flex;
            flex-direction: column;
            gap: 0.5rem;
            min-width: 280px;
        }

        .revenue-total {
            font-family: 'Orbitron', monospace;
            font-weight: 900;
            font-size: 1.8rem;
            background: linear-gradient(45deg, #00ff88, #00cc66);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .pending-badge {
            background: linear-gradient(45deg, #ffc107, #ff9800);
            color: #000;
            font-weight: 700;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.95rem;
            align-self: flex-start;
        }

        /* Empty State */
        .empty-state {
            background: rgba(20, 20, 45, 0.8);
            backdrop-filter: blur(20px);
            border: 2px dashed rgba(0, 255, 255, 0.3);
            border-radius: 25px;
            padding: 4rem 2rem;
            text-align: center;
            margin: 2rem 0;
        }

        /* Orders Table */
        .orders-table {
            background: rgba(20, 20, 45, 0.95);
            backdrop-filter: blur(25px);
            border: 1px solid rgba(0, 255, 255, 0.3);
            border-radius: 25px;
            overflow: hidden;
            box-shadow: 0 30px 80px rgba(0, 0, 0, 0.5);
        }

        .table-header {
            background: linear-gradient(90deg, rgba(0, 255, 255, 0.25), rgba(255, 170, 0, 0.25));
            color: #00ffff;
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            padding: 1.5rem 2rem;
            border-bottom: 2px solid rgba(0, 255, 255, 0.3);
        }

        .table {
            margin: 0;
            color: #e0e0e0;
            font-size: 0.95rem;
        }

        .table th {
            background: rgba(15, 15, 35, 0.8);
            border: none;
            padding: 1.5rem 1rem;
            font-size: 0.85rem;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .table td {
            padding: 1.5rem 1rem;
            vertical-align: middle;
            border-color: rgba(0, 255, 255, 0.1);
        }

        .table tbody tr {
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(0, 255, 255, 0.05);
        }

        .table tbody tr:hover {
            background: rgba(0, 255, 255, 0.08);
            transform: scale(1.01);
        }

        .order-row.pending { border-left: 4px solid #ffc107; }
        .order-row.shipped { border-left: 4px solid #0dc5f0; }
        .order-row.delivered { border-left: 4px solid #00ff88; }
        .order-row.cancelled { border-left: 4px solid #ff4444; }

        .order-id {
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            color: #00ffff;
            font-size: 1rem;
        }

        .status-badge {
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.85rem;
            border: 2px solid;
            min-width: 90px;
            text-align: center;
        }

        .status-pending { background: rgba(255, 193, 7, 0.2); color: #ffc107; border-color: #ffc107; }
        .status-shipped { background: rgba(13, 202, 240, 0.2); color: #0dc5f0; border-color: #0dc5f0; }
        .status-delivered { background: rgba(0, 255, 136, 0.2); color: #00ff88; border-color: #00ff88; }
        .status-cancelled { background: rgba(255, 68, 68, 0.2); color: #ff4444; border-color: #ff4444; }

        .items-preview {
            background: rgba(0, 255, 255, 0.1);
            border-radius: 10px;
            padding: 0.75rem;
            font-size: 0.85rem;
            max-height: 80px;
            overflow: hidden;
        }

        .qty-badge {
            background: linear-gradient(45deg, #6666ff, #3333cc);
            color: white;
            font-weight: 700;
            padding: 0.3rem 0.8rem;
            border-radius: 15px;
            font-size: 0.8rem;
        }

        .total-amount {
            font-family: 'Orbitron', monospace;
            font-weight: 900;
            color: #00ff88;
            font-size: 1.2rem;
        }

        .btn-view {
            background: linear-gradient(45deg, #6666ff, #3333cc);
            border: none;
            color: white;
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 700;
            font-family: 'Roboto Mono', monospace;
            box-shadow: 0 5px 20px rgba(102, 102, 255, 0.4);
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            width: 100%;
            justify-content: center;
        }

        .btn-view:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(102, 102, 255, 0.6);
            color: white !important;
        }

        /* PERFECT RESPONSIVE - FULLSCREEN NO DROPDOWN */
        @media (max-width: 1200px) {
            .nav-links {
                display: none;
            }
            
            .mobile-menu-toggle {
                display: flex;
            }
        }

        @media (max-width: 992px) {
            .page-header { flex-direction: column; text-align: center; }
            .revenue-stats { min-width: 100%; }
        }

        @media (max-width: 768px) {
            .container { padding: 1rem 0.5rem; }
            .navbar { padding: 0.8rem 1rem; }
            .page-header { padding: 2rem 1.5rem; }
            .page-title { font-size: 2rem; }
            .table { font-size: 0.85rem; }
            .table td, .table th { padding: 1rem 0.75rem; }
            .orders-table { border-radius: 20px; }
        }

        @media (max-width: 480px) {
            .page-title { font-size: 1.8rem; }
            .mobile-menu { min-width: 250px; right: 0.5rem; }
        }
    </style>
</head>
<body>
    <!-- Animated Particles -->
    <div class="particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <!-- PERFECT RESPONSIVE NAVBAR -->
    <nav class="navbar" id="navbar">
        <div class="navbar-inner">
            <a href="/home" class="navbar-brand">
                <i class="fas fa-fish me-2"></i>Fish Admin
            </a>
            
            <!-- DESKTOP NAV - FULLSCREEN ONLY (>1200px) -->
            <div class="nav-links">
                <a href="/home" class="nav-link"><i class="fas fa-home me-1"></i>Home</a>
                <a href="/orders" class="nav-link active"><i class="fas fa-box me-1"></i>Orders (<%= pendingCount %>)</a>
                <a href="/userlist" class="nav-link"><i class="fas fa-users me-1"></i>Users</a>
                <a href="/logout" class="nav-link"><i class="fas fa-sign-out-alt me-1"></i>Logout</a>
            </div>

            <!-- MOBILE MENU TOGGLE -->
            <button class="mobile-menu-toggle" id="mobileToggle">
                <i class="fas fa-bars"></i>
                Menu
            </button>
        </div>

        <!-- MOBILE DROPDOWN MENU -->
        <div class="mobile-menu" id="mobileMenu">
            <a href="/home" class="nav-link"><i class="fas fa-home me-1"></i>Home</a>
            <a href="/orders" class="nav-link active"><i class="fas fa-box me-1"></i>Orders (<%= pendingCount %>)</a>
            <a href="/userlist" class="nav-link"><i class="fas fa-users me-1"></i>Users</a>
            <a href="/logout" class="nav-link"><i class="fas fa-sign-out-alt me-1"></i>Logout</a>
        </div>
    </nav>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-boxes me-3"></i>All Orders
                <span style="font-size: 0.6em; opacity: 0.8;">(Total: <%= orders.length %>)</span>
            </h1>
            <div class="revenue-stats">
                <div style="font-size: 0.9rem; opacity: 0.8;">üí∞ Total Revenue</div>
                <div class="revenue-total">‚Çπ<%= totalRevenue.toLocaleString('en-IN') %></div>
                <span class="pending-badge">‚ö†Ô∏è Pending: <%= pendingCount %></span>
            </div>
        </div>

        <% if (orders.length === 0) { %>
        <div class="empty-state">
            <i class="fas fa-inbox fa-4x" style="color: rgba(0,255,255,0.3); margin-bottom: 1.5rem;"></i>
            <h3 style="color: rgba(0,255,255,0.8); margin-bottom: 1rem;">No orders yet</h3>
            <p style="color: rgba(255,255,255,0.6);">Your aquarium business is ready for its first customer!</p>
        </div>
        <% } else { %>
        <!-- Orders Table -->
        <div class="orders-table">
            <div class="table-header">
                <i class="fas fa-list me-2"></i>Orders Management
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th><i class="fas fa-hashtag me-1"></i>#</th>
                            <th><i class="fas fa-barcode me-1"></i>Order ID</th>
                            <th><i class="fas fa-user me-1"></i>Customer</th>
                            <th><i class="fas fa-fish me-1"></i>Items</th>
                            <th><i class="fas fa-rupee-sign me-1"></i>Total</th>
                            <th><i class="fas fa-info-circle me-1"></i>Status</th>
                            <th><i class="fas fa-calendar me-1"></i>Date</th>
                            <th><i class="fas fa-cogs me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% orders.forEach((order, index) => { %>
                        <tr class="order-row <%= order.status %>">
                            <td style="font-family: 'Orbitron', monospace; font-weight: 700;"><%= index + 1 %></td>
                            <td><span class="order-id">#<%= order._id.toString().slice(-8).toUpperCase() %></span></td>
                            <td>
                                <div style="font-weight: 600;"><%= order.userId?.name || 'Guest' %></div>
                                <small style="color: rgba(0,255,255,0.7);"><%= order.userId?.email || '-' %></small>
                            </td>
                            <td>
                                <div class="items-preview">
                                    <div style="font-weight: 600; margin-bottom: 0.25rem;">
                                        <span class="qty-badge"><%= order.items.length %> item<%= order.items.length > 1 ? 's' : '' %></span>
                                    </div>
                                    <% order.items.slice(0,2).forEach(item => { %>
                                    <div><%= item.fishId?.name || 'Fish' %> √ó <%= item.quantity %></div>
                                    <% }) %>
                                    <% if (order.items.length > 2) { %>
                                    <div style="color: rgba(0,255,255,0.7);">+<%= order.items.length - 2 %> more</div>
                                    <% } %>
                                </div>
                            </td>
                            <td><span class="total-amount">‚Çπ<%= order.totalAmount.toLocaleString('en-IN') %></span></td>
                            <td><span class="status-badge status-<%= order.status %>"><%= order.status.toUpperCase() %></span></td>
                            <td>
                                <small style="color: rgba(255,255,255,0.7);">
                                    <%= new Date(order.createdAt).toLocaleDateString('en-IN') %>
                                </small>
                            </td>
                            <td>
                                <a href="/orders/<%= order._id %>" class="btn-view">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
        <% } %>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // PERFECT DROPDOWN MENU
            const toggle = document.getElementById('mobileToggle');
            const menu = document.getElementById('mobileMenu');
            const navbar = document.getElementById('navbar');
            
            if (toggle && menu) {
                toggle.addEventListener('click', function() {
                    menu.classList.toggle('active');
                    const icon = this.querySelector('i');
                    icon.className = menu.classList.contains('active') ? 'fas fa-times' : 'fas fa-bars';
                });

                // Close dropdown on link click
                document.querySelectorAll('.mobile-menu .nav-link').forEach(link => {
                    link.addEventListener('click', () => {
                        menu.classList.remove('active');
                        toggle.querySelector('i').className = 'fas fa-bars';
                    });
                });

                // Close on outside click
                document.addEventListener('click', function(e) {
                    if (!navbar.contains(e.target)) {
                        menu.classList.remove('active');
                        toggle.querySelector('i').className = 'fas fa-bars';
                    }
                });
            }

            // Staggered row animations
            document.querySelectorAll('.order-row').forEach((row, index) => {
                row.style.opacity = '0';
                row.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    row.style.transition = 'all 0.6s ease';
                    row.style.opacity = '1';
                    row.style.transform = 'translateY(0)';
                }, index * 100);
            });

            // Smooth page load
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.8s ease';
            setTimeout(() => document.body.style.opacity = '1', 200);

            // Pending orders pulse
            document.querySelectorAll('.status-pending').forEach(badge => {
                setInterval(() => {
                    badge.style.boxShadow = '0 0 15px rgba(255,193,7,0.6)';
                    setTimeout(() => {
                        badge.style.boxShadow = 'none';
                    }, 1000);
                }, 3000);
            });
        });
    </script>
</body>
</html>
