<!DOCTYPE html>
<html>
<head>
    <title>User Management</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Roboto+Mono:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #0a0a1a 0%, #1a1a2e 30%, #16213e 70%, #0f0f23 100%);
            background-attachment: fixed;
            font-family: 'Roboto Mono', monospace;
            color: #e0e0e0;
            overflow-x: auto;
            position: relative;
        }

        /* Animated Background Grid */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image:
                linear-gradient(rgba(0,255,255,0.05) 1px, transparent 1px),
                linear-gradient(90deg, rgba(0,255,255,0.05) 1px, transparent 1px);
            background-size: 50px 50px;
            animation: gridMove 30s linear infinite;
            z-index: 1;
            opacity: 0.4;
        }

        @keyframes gridMove {
            0% { transform: translate(0, 0); }
            100% { transform: translate(50px, 50px); }
        }

        /* Floating Particles */
        .particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
        }

        .particle {
            position: absolute;
            background: radial-gradient(circle, rgba(0,255,255,0.8) 1px, transparent 1px);
            border-radius: 50%;
            animation: float 25s infinite linear;
        }

        .particle:nth-child(1) { width: 3px; height: 3px; top: 20%; left: 10%; animation-delay: 0s; }
        .particle:nth-child(2) { width: 2px; height: 2px; top: 60%; right: 20%; animation-delay: 8s; }
        .particle:nth-child(3) { width: 4px; height: 4px; bottom: 30%; left: 5%; animation-delay: 15s; }

        @keyframes float {
            0% { transform: translateY(0) rotate(0deg); opacity: 0; }
            10% { opacity: 1; }
            90% { opacity: 1; }
            100% { transform: translateY(-100vh) rotate(360deg); opacity: 0; }
        }

        /* SIMPLIFIED NAVBAR - NO ACTIVE STATES */
        .navbar {
            background: rgba(15, 15, 35, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(0, 255, 255, 0.3);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.5);
            padding: 1rem 2rem;
            position: sticky;
            top: 0;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand {
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            font-size: 1.2rem;
            background: linear-gradient(45deg, #00ffff, #ff00ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: 1px;
            padding: 0.75rem 1.5rem;
            border-radius: 12px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

        .navbar-brand:hover {
            background: linear-gradient(45deg, #ffffff, #00ffff);
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(0, 255, 255, 0.3);
        }

        /* Main Container */
        .container {
            max-width: 1400px;
            margin: 2rem auto;
            padding: 0 1rem;
            position: relative;
            z-index: 2;
        }

        /* Page Title */
        .page-title {
            font-family: 'Orbitron', monospace;
            font-weight: 900;
            font-size: 2.5rem;
            background: linear-gradient(45deg, #00ffff, #ffffff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 2rem;
            letter-spacing: 2px;
        }

        .users-count {
            background: linear-gradient(45deg, rgba(0, 255, 136, 0.2), rgba(0, 255, 255, 0.2));
            border: 2px solid rgba(0, 255, 255, 0.4);
            border-radius: 15px;
            padding: 1rem 1.5rem;
            display: inline-block;
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            color: #00ffff;
        }

        /* PERFECT SEARCH BAR */
        .search-container {
            background: rgba(20, 20, 45, 0.9);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(0, 255, 255, 0.3);
            border-radius: 20px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            max-width: 600px;
        }

        .search-form {
            position: relative;
            display: flex;
            align-items: center;
            background: rgba(15, 15, 35, 0.9);
            border: 2px solid rgba(0, 255, 255, 0.4);
            border-radius: 18px;
            overflow: hidden;
            height: 60px;
        }

        .search-input {
            flex: 1;
            background: transparent;
            border: none;
            padding: 1rem 1.5rem 1rem 4rem;
            font-family: 'Roboto Mono', monospace;
            font-size: 1rem;
            color: #ffffff;
            height: 100%;
        }

        .search-input:focus {
            outline: none;
            box-shadow: none;
        }

        .search-input::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

        .search-icon {
            position: absolute;
            left: 1.5rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(0, 255, 255, 0.7);
            font-size: 1.1rem;
            z-index: 2;
        }

        .search-btn {
            background: linear-gradient(45deg, #00ffff, #0080ff);
            border: none;
            border-radius: 0 16px 16px 0;
            padding: 1rem 2rem;
            font-weight: 700;
            font-family: 'Orbitron', monospace;
            color: #000;
            box-shadow: none;
            transition: all 0.3s ease;
            height: 100%;
            white-space: nowrap;
            flex-shrink: 0;
        }

        .search-btn:hover {
            background: linear-gradient(45deg, #ffffff, #00ffff);
            transform: translateX(2px);
        }

        /* SIMPLIFIED PAGINATION */
        .pagination-container {
            display: flex;
            justify-content: center;
            margin-bottom: 2rem;
            gap: 0.5rem;
        }

        .page-item {
            margin: 0;
        }

        .page-link {
            background: rgba(15, 15, 35, 0.8);
            border: 2px solid rgba(0, 255, 255, 0.3);
            color: #e0e0e0;
            border-radius: 10px;
            padding: 0.75rem 1rem;
            font-family: 'Roboto Mono', monospace;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            min-width: 45px;
            text-align: center;
        }

        .page-link:hover {
            background: rgba(0, 255, 255, 0.2);
            border-color: #00ffff;
            color: #00ffff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 255, 255, 0.3);
        }

        /* PERFECTLY VISIBLE TABLE */
        .users-table {
            background: rgba(20, 20, 45, 0.95);
            backdrop-filter: blur(25px);
            border: 1px solid rgba(0, 255, 255, 0.3);
            border-radius: 25px;
            box-shadow: 0 30px 80px rgba(0, 0, 0, 0.5);
        }

        .table-header {
            background: linear-gradient(90deg, rgba(0, 255, 255, 0.25), rgba(0, 255, 136, 0.25));
            color: #00ffff;
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            padding: 1.5rem 2rem;
        }

        .table-wrapper {
            overflow-x: auto;
            -webkit-overflow-scrolling: touch;
        }

        .table {
            margin: 0;
            color: #e0e0e0;
            font-size: 0.95rem;
            width: 100%;
            min-width: 800px;
        }

        .table th {
            background: rgba(15, 15, 35, 0.9);
            border: none;
            padding: 1.5rem 1rem;
            font-size: 0.85rem;
            text-align: left;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .table td {
            padding: 1.5rem 1rem;
            vertical-align: middle;
            border-bottom: 1px solid rgba(0, 255, 255, 0.05);
        }

        .table tbody tr {
            transition: all 0.3s ease;
        }

        .table tbody tr:hover {
            background: rgba(0, 255, 255, 0.08);
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(45deg, #00ffff, #ff00ff);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: #000;
            font-size: 0.9rem;
            margin-right: 1rem;
            flex-shrink: 0;
        }

        .user-info {
            display: flex;
            align-items: flex-start;
            gap: 1rem;
        }

        .user-name {
            font-weight: 700;
            color: #ffffff;
            font-family: 'Orbitron', monospace;
            font-size: 1.05rem;
        }

        .user-email {
            color: rgba(0, 255, 255, 0.9);
            font-family: 'Roboto Mono', monospace;
            font-size: 0.9rem;
            margin-top: 0.25rem;
        }

        .status-badge {
            font-family: 'Orbitron', monospace;
            font-weight: 700;
            padding: 0.6rem 1.2rem;
            border-radius: 20px;
            font-size: 0.85rem;
            border: 2px solid;
            min-width: 85px;
            text-align: center;
            white-space: nowrap;
        }

        .status-active {
            background: rgba(0, 255, 136, 0.2);
            color: #00ff88;
            border-color: #00ff88;
            box-shadow: 0 0 15px rgba(0, 255, 136, 0.4);
        }

        .status-blocked {
            background: rgba(255, 68, 68, 0.2);
            color: #ff4444;
            border-color: #ff4444;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% { box-shadow: 0 0 10px rgba(255, 68, 68, 0.4); }
            50% { box-shadow: 0 0 20px rgba(255, 68, 68, 0.8); }
        }

        /* PERFECTLY VISIBLE ACTION BUTTONS */
        .action-buttons {
            display: flex;
            gap: 0.5rem;
            min-width: 220px;
        }

        .action-btn {
            flex: 1;
            border-radius: 12px;
            padding: 0.75rem 1rem;
            font-weight: 700;
            font-family: 'Roboto Mono', monospace;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-size: 0.85rem;
            min-height: 44px;
            white-space: nowrap;
        }

        .btn-block {
            background: linear-gradient(45deg, #ff4444, #cc0000);
            color: #ffffff;
            box-shadow: 0 5px 20px rgba(255, 68, 68, 0.4);
        }

        .btn-block:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(255, 68, 68, 0.6);
            color: #ffffff !important;
        }

        .btn-unblock {
            background: linear-gradient(45deg, #00ff88, #00cc66);
            color: #000;
            box-shadow: 0 5px 20px rgba(0, 255, 136, 0.4);
        }

        .btn-unblock:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(0, 255, 136, 0.6);
            color: #000 !important;
        }

        /* RESPONSIVE */
        @media (max-width: 992px) {
            .search-container { max-width: 100%; }
        }

        @media (max-width: 768px) {
            .container { padding: 1rem 0.5rem; }
            .navbar { padding: 0.8rem 1rem; flex-direction: column; gap: 0.5rem; }
            .page-title { font-size: 2rem; text-align: center; }
            
            .table { font-size: 0.9rem; }
            .table td, .table th { padding: 1rem 0.75rem; }
            
            .user-info { flex-direction: column; align-items: flex-start; gap: 0.5rem; }
            .user-avatar { margin-right: 0; margin-bottom: 0.25rem; }
            
            .action-buttons { 
                flex-direction: column; 
                width: 140px;
            }
        }

        @media (max-width: 480px) {
            .search-form { height: 55px; }
            .table-wrapper { margin: 0 -0.5rem; }
            .table td, .table th { padding: 0.75rem 0.5rem; font-size: 0.8rem; }
            .action-buttons { width: 120px; }
            .action-btn { padding: 0.6rem 0.75rem; font-size: 0.8rem; }
        }
    </style>
</head>
<body>
    <!-- Animated Particles -->
    <div class="particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <!-- SIMPLIFIED NAVBAR -->
    <nav class="navbar">
        <a href="/home" class="navbar-brand">
            <i class="fas fa-arrow-left me-2"></i>Fish Dashboard
        </a>
        <a href="/logout" class="navbar-brand">
            <i class="fas fa-sign-out-alt me-2"></i>Logout
        </a>
    </nav>

    <div class="container">
        <!-- Page Title -->
        <h1 class="page-title">
            <i class="fas fa-users me-3"></i>User Management
            <span class="users-count">(<%= users.length %> of <%= totalUsers %>)</span>
        </h1>

        <!-- PERFECT SEARCH BAR -->
        <div class="search-container">
            <form method="GET" class="search-form">
                <i class="fas fa-search search-icon"></i>
                <input type="text" name="search" class="search-input" value="<%= search %>" placeholder="Search users by name or email...">
                <button type="submit" class="search-btn">
                    <i class="fas fa-search me-1"></i>Search
                </button>
            </form>
        </div>

        <!-- SIMPLIFIED PAGINATION -->
        <% if (totalPages > 1) { %>
        <div class="pagination-container">
            <nav>
                <ul class="pagination">
                    <% for(let i = 1; i <= totalPages; i++) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= i %>&search=<%= search %>"><%= i %></a>
                    </li>
                    <% } %>
                </ul>
            </nav>
        </div>
        <% } %>

        <!-- PERFECTLY VISIBLE TABLE -->
        <div class="users-table">
            <div class="table-header">
                <i class="fas fa-list me-2"></i>Users Management
            </div>
            <div class="table-wrapper">
                <table class="table">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                        <tr>
                            <td>
                                <div class="user-info">
                                    <div class="user-avatar"><%= user.name.charAt(0).toUpperCase() %></div>
                                    <div>
                                        <div class="user-name"><%= user.name %></div>
                                        <div class="user-email"><%= user.email %></div>
                                    </div>
                                </div>
                            </td>
                            <td><%= user.phone || '-' %></td>
                            <td>
                                <span class="status-badge status-<%= user.isActive ? 'active' : 'blocked' %>">
                                    <%= user.isActive ? 'Active' : 'Blocked' %>
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <% if (user.isActive) { %>
                                        <a href="/user/block/<%= user._id %>" class="action-btn btn-block" title="Block User">
                                            <i class="fas fa-ban"></i> Block
                                        </a>
                                    <% } else { %>
                                        <a href="/user/unblock/<%= user._id %>" class="action-btn btn-unblock" title="Unblock User">
                                            <i class="fas fa-check-circle"></i> Unblock
                                        </a>
                                    <% } %>
                                </div>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Staggered row animations
            document.querySelectorAll('tbody tr').forEach((row, index) => {
                row.style.opacity = '0';
                row.style.transform = 'translateY(30px)';
                setTimeout(() => {
                    row.style.transition = 'all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                    row.style.opacity = '1';
                    row.style.transform = 'translateY(0)';
                }, index * 120);
            });

            // Smooth page load
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.8s ease';
            setTimeout(() => document.body.style.opacity = '1', 300);

            // Search glow effect
            const searchForm = document.querySelector('.search-form');
            const searchInput = document.querySelector('.search-input');
            
            if (searchInput) {
                searchInput.addEventListener('focus', function() {
                    searchForm.style.borderColor = '#00ffff';
                    searchForm.style.boxShadow = '0 0 30px rgba(0, 255, 255, 0.4)';
                });
                searchInput.addEventListener('blur', function() {
                    if (!this.value) {
                        searchForm.style.borderColor = 'rgba(0, 255, 255, 0.4)';
                        searchForm.style.boxShadow = 'none';
                    }
                });
            }
        });
    </script>
</body>
</html>
