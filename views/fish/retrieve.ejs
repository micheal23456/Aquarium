<!DOCTYPE html>
<html>
<head>
    <title>All Fishes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/home">← Dashboard</a>
            <a class="navbar-brand" href="/logout">Logout</a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between mb-4">
            <h2>All Fishes (<%= data.length %>)</h2>
            <a href="/create_fish" class="btn btn-success">+ Add New</a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Price</th>
                        <th>Video</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(fish => { %>
                    <tr>
                        <td>
                            <% if (fish.photo) { %>
                                <img src="<%= fish.photo %>" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;">
                            <% } else { %>
                                <span class="text-muted">No photo</span>
                            <% } %>
                        </td>
                        <td><%= fish.name %></td>
                        <td><span class="badge bg-info"><%= fish.type %></span></td>
                        <td><strong>₹<%= fish.price %></strong></td>
                        <td>
                            <% if (fish.video) { %>
                                <a href="<%= fish.video %>" target="_blank" class="btn btn-sm btn-outline-primary">View</a>
                            <% } else { %>
                                <span class="text-muted">-</span>
                            <% } %>
                        </td>
                        <td><%= new Date(fish.timestamp).toLocaleDateString() %></td>
                        <td>
                            <a href="/update_fish/<%= fish._id %>" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/delete_fish/<%= fish._id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
