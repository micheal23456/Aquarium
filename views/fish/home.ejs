<!DOCTYPE html>
<html>
<head>
    <title>Fish Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/home">üêü Fish Admin</a>
            <a href="/orders" class="nav-link">
             üì¶ Orders (<%= ordersCount || 0 %>)
            </a>
            <div class="navbar-nav ms-auto">
                <a class="btn btn-outline-light ms-2" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="d-flex justify-content-between mb-4">
            <h2>Fish Catalog (<%= fishes.length %>)</h2>
            <div>
                <a href="/userlist" class="btn btn-info me-2">üë• Manage Users</a>
                <a href="/create_fish" class="btn btn-success">+ Add Fish</a>
            </div>
        </div>

        <!-- Search Form -->
        <form method="GET" class="mb-4">
            <div class="input-group">
                <input type="text" name="search" class="form-control" value="<%= search %>" placeholder="Search fish...">
                <button class="btn btn-primary">Search</button>
            </div>
        </form>

        <!-- Fish Cards -->
        <div class="row">
            <% fishes.forEach(fish => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <% if (fish.photo) { %>
                            <img src="<%= fish.photo %>" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= fish.name %></h5>
                            <p class="text-muted"><%= fish.type %></p>
                            <p class="fw-bold text-success">‚Çπ<%= fish.price %></p>
                            <div class="d-flex gap-2 flex-wrap">
                                <a href="/update_fish/<%= fish._id %>" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/delete_fish/<%= fish._id %>" class="btn btn-sm btn-danger">Delete</a>
                                <% if (fish.video) { %>
                                    <button class="btn btn-sm btn-info" data-bs-toggle="modal" data-bs-target="#videoModal<%= fish._id %>">
                                        ‚ñ∂Ô∏è Video
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Video Modal -->
                <% if (fish.video) { %>
                <div class="modal fade" id="videoModal<%= fish._id %>" tabindex="-1">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title"><%= fish.name %> - Video</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <video controls class="w-100" style="max-height: 500px;">
                                    <source src="<%= fish.video %>" type="video/mp4">
                                    Your browser does not support the video tag.
                                </video>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
